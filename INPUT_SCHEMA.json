{
  "title": "Shopify Lightning Scraper",
  "type": "object",
  "schemaVersion": 1,
  "required": [
    "domain"
  ],
  "properties": {
    "domain": {
      "title": "Shopify Store Domain",
      "type": "string",
      "editor": "textfield",
      "description": "The domain of the Shopify store to scrape (e.g., 'example.myshopify.com' or 'example.com')",
      "prefill": "example.com"
    },
    "websites": {
      "title": "Multiple Websites",
      "type": "array",
      "editor": "stringList",
      "description": "List of websites to scrape in multi-website mode",
      "items": {
        "type": "string"
      }
    },
    "multi_website_mode": {
      "title": "Multi-Website Mode",
      "type": "boolean",
      "editor": "checkbox",
      "description": "Enable scraping multiple websites simultaneously",
      "default": false
    },
    "max_products": {
      "title": "Max Products per Site",
      "type": "integer",
      "editor": "number",
      "description": "Maximum number of products to scrape per website (0 = unlimited)",
      "minimum": 0,
      "maximum": 100000,
      "default": 0
    },
    "max_concurrent": {
      "title": "Concurrent Requests per Domain",
      "type": "integer",
      "editor": "number",
      "description": "Maximum concurrent requests per domain",
      "minimum": 1,
      "maximum": 100,
      "default": 10
    },
    "global_max_concurrent": {
      "title": "Global Concurrent Requests",
      "type": "integer",
      "editor": "number",
      "description": "Global maximum concurrent requests across all websites",
      "minimum": 1,
      "maximum": 200,
      "default": 20
    },
    "auto_discover": {
      "title": "Auto Discover Products",
      "type": "boolean",
      "editor": "checkbox",
      "description": "Automatically discover products from the store",
      "default": true
    },
    "timeout_seconds": {
      "title": "Request Timeout (seconds)",
      "type": "integer",
      "editor": "number",
      "description": "Request timeout in seconds",
      "minimum": 5,
      "maximum": 300,
      "default": 15
    },
    "output_format": {
      "title": "Output Format",
      "type": "string",
      "editor": "select",
      "description": "Output format for scraped data",
      "enum": ["Json", "JsonL", "Csv", "Xml", "Parquet"],
      "default": "Json"
    },
    "pagination": {
      "title": "Pagination Settings",
      "type": "object",
      "description": "Pagination settings for products.json endpoint",
      "properties": {
        "limit": {
          "title": "Products per Page",
          "type": "integer",
          "editor": "number",
          "description": "Number of products per page (limit parameter)",
          "minimum": 1,
          "maximum": 250,
          "default": 250
        },
        "page": {
          "title": "Starting Page",
          "type": "integer",
          "editor": "number",
          "description": "Starting page number (page parameter)",
          "minimum": 1,
          "default": 1
        },
        "enable_pagination": {
          "title": "Enable Pagination",
          "type": "boolean",
          "editor": "checkbox",
          "description": "Enable pagination for product discovery",
          "default": true
        },
        "max_pages": {
          "title": "Maximum Pages",
          "type": "integer",
          "editor": "number",
          "description": "Maximum number of pages to fetch (0 = unlimited)",
          "minimum": 0,
          "default": 0
        }
      }
    }
  }
}

