{
  "title": "Shopify Lightning Scraper",
  "type": "object",
  "schemaVersion": 1,
  "required": ["domain"],
  "properties": {
    "domain": {
      "title": "Shopify Store Domain",
      "type": "string",
      "editor": "textfield",
      "description": "The domain of the Shopify store to scrape (e.g., 'example.myshopify.com' or 'example.com')",
      "prefill": "samapura.store"
    },
    "max_products": {
      "title": "Maximum Products",
      "type": "integer",
      "editor": "number",
      "description": "Maximum number of products to scrape",
      "default": 50,
      "minimum": 1,
      "maximum": 1000
    },
    "max_concurrent": {
      "title": "Max Concurrent Requests",
      "type": "integer",
      "editor": "number",
      "description": "Maximum number of concurrent requests",
      "default": 100,
      "minimum": 1,
      "maximum": 500
    },
    "timeout_seconds": {
      "title": "Request Timeout (seconds)",
      "type": "integer",
      "editor": "number",
      "description": "Timeout for each HTTP request in seconds",
      "default": 30,
      "minimum": 5,
      "maximum": 300
    },
    "output_format": {
      "title": "Output Format",
      "type": "string",
      "editor": "textfield",
      "description": "Format for output data (json, jsonl, csv, xml, parquet)",
      "enum": ["json", "jsonl", "csv", "xml", "parquet"],
      "default": "json"
    },
    "filters": {
      "title": "Product Filters",
      "type": "object",
      "editor": "textarea",
      "description": "Filters to apply to scraped products (JSON). Example: {\"min_price\":10,\"tags_any\":[\"sale\"]}",
      "properties": {
        "min_price": { "type": "number", "editor": "textfield", "description": "Minimum price filter" },
        "max_price": { "type": "number", "editor": "textfield", "description": "Maximum price filter" },
        "currency": { "type": "string", "editor": "textfield", "description": "Currency filter (e.g., 'USD', 'EUR')" },
        "vendors": {
          "type": "array",
          "editor": "select",
          "items": { "type": "string" },
          "description": "Vendor filter - only products from these vendors"
        },
        "product_types": {
          "type": "array",
          "editor": "select",
          "items": { "type": "string" },
          "description": "Product type filter"
        },
        "tags_any": {
          "type": "array",
          "editor": "select",
          "items": { "type": "string" },
          "description": "Products must have at least one of these tags"
        },
        "availability": { "type": "boolean", "editor": "textfield", "description": "Product availability filter" },
        "search_query": { "type": "string", "editor": "textfield", "description": "Search query to filter products by title/description" }
      }
    },
    "extraction": {
      "title": "Extraction Options",
      "type": "object",
      "editor": "textarea",
      "description": "Options for data extraction (JSON). Example: {\"include_custom_fields\": true}",
      "properties": {
        "include_custom_fields": {
          "type": "boolean",
          "editor": "textfield",
          "description": "Include custom metafields",
          "default": false
        },
        "include_images": {
          "type": "boolean",
          "editor": "textfield",
          "description": "Include product images",
          "default": true
        },
        "include_variants": {
          "type": "boolean",
          "editor": "textfield",
          "description": "Include product variants",
          "default": true
        }
      }
    },
    "performance": {
      "title": "Performance Settings",
      "type": "object",
      "editor": "textarea",
      "description": "Performance optimization settings (JSON).",
      "properties": {
        "enable_connection_pooling": { "type": "boolean", "editor": "textfield", "description": "Enable connection pooling", "default": true },
        "enable_compression": { "type": "boolean", "editor": "textfield", "description": "Enable compression", "default": true },
        "enable_retries": { "type": "boolean", "editor": "textfield", "description": "Enable automatic retries", "default": true },
        "max_retries": { "type": "integer", "editor": "number", "description": "Maximum number of retries", "default": 3, "minimum": 0, "maximum": 10 }
      }
    }
  }
}


